extends ../base
block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(type="email",placeholder="Input Email",name="email",required)
        input(type="text",placeholder="Input Username",name="username",required)
        input(type="password",placeholder="Input password",name="password",required)
        input(type="password",placeholder="Confirm password",name="password1",required)
        input(type="name",placeholder="Input name",name="name",required,maxlength="20")
        input(type="loaction",placeholder="Input location",name="location")
        input(type="submit",value="Join")
    hr
    div
        span Already account? 
            a(href="/login") Login &rarr;