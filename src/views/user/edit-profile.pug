extends ../base
block content
    if errorMessage
        span=errorMessage
    img(src="/"+user.avatarUrl,style="width:100px")
    form(method="POST",enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file",id="avatar",name="avatar",accept="image/*")
        input(type="text",name="username",value=user.username,placeholder="Edit username")
        input(type="text",name="email",value=user.email,placeholder="Edit email")
        input(type="text",name="location",value=user.location,placeholder="Edit Location")
        input(type="text",name="name",value=user.name,placeholder="Edit name")
        input(type="submit",value="Edit profile")
    hr
    a(href="delete") Delete User &rarr;
    if !user.socialOnly
        a(href="change-password") Change Password &rarr;