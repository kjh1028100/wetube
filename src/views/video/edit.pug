extends ../base
block content
    form(action="edit?_method=PUT",method="POST",enctype="multipart/form-data")
        label(for="video") Video
        input(type="file",accept="video/*",id="video",name="video")
        input(type="text", name="title",value=video.title,required)
        input(type="text", name="description",value=video.description,required)
        input(type="text", name="hashtags",value=video.hashtags.join(),required)
        input(type="submit",value="Edit")